<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>org.opensimulationsystems.saf</groupId>
	<artifactId>saf.core.runtime</artifactId>
	<version>2011-12-15</version>
	<packaging>jar</packaging>

	<name>${project.groupId}:${project.artifactId}</name>
	<url>http://www.opensimulationsystems.org</url>

	<licenses>
		<license>
			<name>Repast Suite License, Copyright (c) 2015 Argonne National Laboratory</name>
			<url>https://sourceforge.net/p/repast/simphony-app-framework/ci/master/tree/runtime/licenses/</url>
		</license>
	</licenses>

	<developers>
		<developer>
			<name>Jorge Calderon</name>
			<email>jcald1@gmail.com</email>
			<organization>Open Simulation Systems (Open Source Simulation Software)</organization>
			<organizationUrl>http://www.opensimulationsystems.com</organizationUrl>
		</developer>
	</developers>

	<scm>
		<!-- <connection>scm:git:git@github.com:IDRSolutions/maven-OpenViewerFX-src.git</connection>
			<developerConnection>scm:git:git@github.com:IDRSolutions/maven-OpenViewerFX-src.git</developerConnection> -->
		<url>https://sourceforge.net/p/repast/simphony-app-framework/ci/master/tree/runtime/</url>
	</scm>

	<properties>
		<project.build.sourceEncoding>CP1252</project.build.sourceEncoding>
		<maven.compiler.source>1.7</maven.compiler.source>
		<maven.compiler.target>1.7</maven.compiler.target>
		<repast.simphony.version>2.3.1</repast.simphony.version>
	</properties>

	<!-- The dependencies are classified as "provided" scope because the Repast
		Simphony ${repast.simphony.version} provides the runtime JARs. -->
	<dependencies>
		<!-- Version differs from the one in Repast Simphony ${repast.simphony.version}
			runtime lib directory. -->
		<dependency>
			<groupId>commons-logging</groupId>
			<artifactId>commons-logging</artifactId>
			<version>1.0.2</version>
			<scope>provided</scope>
		</dependency>
		<!-- Custom Repast Simphony version -->
		<dependency>
			<groupId>org.opensimulationsystems</groupId>
			<artifactId>jpf</artifactId>
			<version>2011-12-15</version>
			<scope>provided</scope>
		</dependency>
		<!-- Custom Repast Simphony version -->
		<dependency>
			<groupId>org.opensimulationsystems</groupId>
			<artifactId>jpf-boot</artifactId>
			<version>2011-12-15</version>
			<scope>provided</scope>
		</dependency>
		<!-- Version differs from the one in Repast Simphony ${repast.simphony.version}
			runtime lib directory. JAR size in SAF lib directory differs from the
			Maven
			version. -->
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<version>1.2.13</version>
			<scope>provided</scope>
		</dependency>
		<!-- Using 1.1.4c as distributed with Repast Simphony ${repast.simphony.version}
			runtime lib directory instead of xpp3-1.1.3.4d_b4_min.jar, which is distributed
			with SAF. xpp3-1.1.3.4d_b4_min.jar was not found in Maven central repo. -->
		<dependency>
			<groupId>xpp3</groupId>
			<artifactId>xpp3_min</artifactId>
			<version>1.1.4c</version>
			<scope>provided</scope>
		</dependency>
		<!-- Version differs from the one in Repast Repast Simphony ${repast.simphony.version}
			runtime lib directory -->
		<dependency>
			<groupId>com.thoughtworks.xstream</groupId>
			<artifactId>xstream</artifactId>
			<version>1.1.3</version>
			<scope>provided</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-gpg-plugin</artifactId>
				<version>1.6</version>
				<executions>
					<execution>
						<id>sign-artifacts</id>
						<phase>verify</phase>
						<goals>
							<goal>sign</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.sonatype.plugins</groupId>
				<artifactId>nexus-staging-maven-plugin</artifactId>
				<version>1.6.3</version>
				<extensions>true</extensions>
				<configuration>
					<serverId>ossrh</serverId>
					<nexusUrl>https://oss.sonatype.org/</nexusUrl>
					<stagingProfileId>935d33603e6f5</stagingProfileId>
					<autoReleaseAfterClose>false</autoReleaseAfterClose>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<version>3.0.0</version>
				<executions>
					<execution>
						<id>attach-sources</id>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>2.10.3</version>
				<executions>
					<execution>
						<id>attach-javadocs</id>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

		</plugins>
	</build>

	<distributionManagement>
		<snapshotRepository>
			<id>ossrh</id>
			<url>https://oss.sonatype.org/content/repositories/snapshots</url>
		</snapshotRepository>
	</distributionManagement>

	<description>The Repast Simphony {Repast_Simphony_Installation}/plugins/repast.simphony.runtime_{version}/lib/saf.core.runtime.jar. This Maven central repository artifact is not maintained by the Repast/Argonne National Laboratory development team. The source is under their license and the source control scm url points to their code repository. Maven adds the version number to the jar filename built from this artifact, which is not present in the original jar distributed with Repast Simphony. The generated jar may not match byte-for-byte with the saf.core.runtime.jar deployed with Repast Simphony. Some of the third party library dependency versions differ due to their unavailability in the Maven central repo. However, in most of those cases, the actual versions in the {Repast_Simphony_Installation}/plugins/repast.simphony.runtime_{version}/lib directory differed from the ones in saf.core.runtimeâ€™s lib directory.  Since the Repast Simphony installation versions were present in Maven central repo, we used them instead as dependencies in saf.core.runtime.  In the case of jpf.jar and jpf-boot.jar, where the Repast Simphony development modified those third party JARs, separate Maven artifacts were created and they were used as dependencies in this saf.core.runtime artifact.</description>
</project>
