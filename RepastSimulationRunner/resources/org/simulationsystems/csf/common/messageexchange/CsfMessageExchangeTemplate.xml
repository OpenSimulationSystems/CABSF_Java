<?xml version="1.0" encoding="UTF-8"?>
<CsfMessageExchange
	xmlns="http://www.simulationsystems.org/csf/schemas/CsfMessageExchange/0.1"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	>
	<Identifiers>
		<Simulation>
			<!-- Required by CSF, but optional in the configuration -->
			<SimulationID></SimulationID>
			<!-- Optional -->
			<SimulationVersionID></SimulationVersionID>
			<!-- Optional -->
			<SimulationSpecificationConfigurationID>
			</SimulationSpecificationConfigurationID>
		</Simulation>
		<CommonSimulationFramework>
			<!-- Required by CSF, but optional in the configuration -->
			<SimulationRunGroupId></SimulationRunGroupId>
			<!--THIS ELEMENT IS ALWAYS GLOBALLY UNIQUE (GENERATED BY CSF), FOR A SIMULATION 
				RUN GROUP. THIS PLUS THE SIMULATION RUN ID IS GUARANTEED TO BE GLOBALLY UJNIQUE 
				FOR A ANY GIVEN SIMULATION RUN INSTANCE -->
			<SimulationRunGroupInstanceId>
			</SimulationRunGroupInstanceId>
			<!-- Required by CSF, but optional in the configuration -->
			<SimulationRunId></SimulationRunId>
			<!-- Optional -->
			<UserDefinedConfigurations></UserDefinedConfigurations>
		</CommonSimulationFramework>
	</Identifiers>
	<SendingEntity>
		<Name>RepastSimulationWrapper</Name>
		<ID></ID>
	</SendingEntity>
	<ReceivingEntities>
		<!-- Message bound for the simulation runtime: true/false -->
		<SimulationSystem>false</SimulationSystem>
		
		<MessageToAllDistributedSystems>
			<ControlMessages>
				<!-- SIMULATION_STARTED or SIMULATION_ENDED for messaging a distributed 
					system -->
				<ControlMessage></ControlMessage>
			</ControlMessages>
		</MessageToAllDistributedSystems>

		<!-- Only one distributed system supported for now -->
		<DistributedSystems>
			<!-- If not for simulation runtime, bound for distributed system(s) -->
			<DistributedSystem>
				<Name></Name>
				<ID></ID>
				<RecipientDistributedAutonomousAgent>
					<Name></Name>
					<ID></ID>
					<Messages>
						<Message>
							<RecipientAgentModel>
								<Name></Name>
								<ID></ID>
							</RecipientAgentModel>
							<Actions>
								<Action>
									<Actor>
										<!-- Usually self -->
										<ID></ID>
									</Actor>
									<Move>
										<GridX></GridX>
										<GridY></GridY>
									</Move>
									<!-- Optional -->
									<UserDefinedAction></UserDefinedAction>
								</Action>
								<!-- Optional -->
								<StateUpdates>
									<!-- CSF-simulation-specific child elements, other than ID -->
									<Entity>
										<!-- Usually self -->
										<ID></ID>
									</Entity>
								</StateUpdates>
							</Actions>
						</Message>
					</Messages>
				</RecipientDistributedAutonomousAgent>
			</DistributedSystem>
		</DistributedSystems>
	</ReceivingEntities>
</CsfMessageExchange>
 
